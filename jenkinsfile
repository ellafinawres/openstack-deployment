pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ellafinawres/openstack-deployment.git'
            }
        }

        stage('Test Ansible connectivity') {
            steps {
                sh "ansible -i /etc/ansible/inventory.yml all -m ping -e ansible_ssh_timeout=30"
            }
        }

        stage('Deploy Keystone') {
            steps {
                sh "ansible-playbook -i /etc/ansible/inventory.yml /etc/ansible/site.yml"
            }
        }

        stage('Verify Keystone') {
            steps {
                sh "ssh -i /var/lib/jenkins/.ssh/openstack_key.pem openstack@10.0.0.11 'openstack project list'"
                sh "ssh -i /var/lib/jenkins/.ssh/openstack_key.pem openstack@10.0.0.11 'openstack user list'"
            }
        }
    }

    post {
        success {
            echo "✅ Déploiement OpenStack terminé et Keystone vérifié"
        }
        failure {
            echo "❌ Échec du déploiement ou de la vérification"
        }
    }
}
