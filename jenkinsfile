pipeline {
    agent any

    environment {
        INVENTORY = "inventory.yml"
        PLAYBOOK = "site.yml"
    }

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ellafinawres/openstack-deployment.git'
            }
        }

        stage('Test Ansible connectivity') {
            steps {
                dir('.') {
                    sh """
                    ansible -i ${INVENTORY} all -m ping -e ansible_ssh_timeout=30
                    """
                }
            }
        }

        stage('Deploy Keystone') {
            steps {
                dir('.') {
                    sh """
                    ansible-playbook -i ${INVENTORY} ${PLAYBOOK}
                    """
                }
            }
        }

        stage('Verify Keystone') {
            steps {
                sh "openstack project list"
                sh "openstack user list"
            }
        }
    }

    post {
        success {
            echo "✅ Déploiement OpenStack terminé et Keystone vérifié"
        }
        failure {
            echo "❌ Échec du déploiement ou de la vérification"
        }
    }
}
