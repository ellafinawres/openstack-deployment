pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        OS_USERNAME = 'admin'
        OS_PASSWORD = 'adminpass'
        OS_PROJECT_NAME = 'admin'
        OS_USER_DOMAIN_NAME = 'Default'
        OS_PROJECT_DOMAIN_NAME = 'Default'
        OS_AUTH_URL = 'http://10.0.0.11:5000/v3'
        OS_IDENTITY_API_VERSION = '3'
        INVENTORY = '/ansible/inventory.yml' // inventaire monté depuis la machine locale
    }

    stages {
        stage('Pipeline OpenStack') {
            steps {
                dir('/ansible') {
                    echo "=== Test de connexion Ansible ==="
                    sh "ansible -i ${INVENTORY} all -m ping -e 'ansible_ssh_timeout=30'"

                    echo "=== Déploiement Keystone ==="
                    sh "ansible-playbook -i ${INVENTORY} site.yml"

                    echo "=== Vérification Keystone ==="
                    sh """
                    openstack project list
                    openstack user list
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Déploiement OpenStack terminé et Keystone vérifié"
        }
        failure {
            echo "❌ Échec du déploiement ou de la vérification"
        }
    }
}

