pipeline {
    agent any

    environment {
        SSH_KEY = '/var/jenkins_home/.ssh/openstack_key.pem'
        SSH_USER = 'root'
        SSH_HOST = '172.26.32.11'
    }

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ellafinawres/openstack-deployment.git'
            }
        }

        stage('Test Ansible connectivity') {
            steps {
                sh """
                ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} \\
                'ansible -i /var/lib/jenkins/inventory.yml all -m ping -e ansible_ssh_timeout=30'
                """
            }
        }

        stage('Deploy Keystone') {
            steps {
                sh """
                ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} \\
                'ansible-playbook -i /var/lib/jenkins/inventory.yml /var/lib/jenkins/site.yml'
                """
            }
        }

        stage('Verify Keystone') {
            steps {
                sh "ssh -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} 'openstack project list'"
                sh "ssh -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} 'openstack user list'"
            }
        }
    }

    post {
        success {
            echo "✅ Déploiement OpenStack terminé et Keystone vérifié"
        }
        failure {
            echo "❌ Échec du déploiement ou de la vérification"
        }
    }
}
