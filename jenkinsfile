pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        OS_USERNAME = 'admin'
        OS_PASSWORD = 'adminpass'
        OS_PROJECT_NAME = 'admin'
        OS_USER_DOMAIN_NAME = 'Default'
        OS_PROJECT_DOMAIN_NAME = 'Default'
        OS_AUTH_URL = 'http://10.0.0.11:5000/v3'
        OS_IDENTITY_API_VERSION = '3'
    }

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ellafinawres/openstack-deployment.git'
            }
        }

        stage('Test Ansible connectivity') {
            steps {
                echo "=== Test de ping Ansible ==="
                sh "ansible -i inventory.yml all -m ping -e 'ansible_ssh_timeout=30'"
            }
        }

        stage('Deploy Keystone') {
            steps {
                echo "=== Déploiement Keystone ==="
                sh "ansible-playbook -i inventory.yml site.yml"
            }
        }

        stage('Verify Keystone') {
            steps {
                echo "=== Vérification Keystone ==="
                sh "openstack project list"
                sh "openstack user list"
            }
        }
    }

    post {
        success {
            echo "✅ Déploiement OpenStack terminé et Keystone vérifié"
        }
        failure {
            echo "❌ Échec du déploiement ou de la vérification"
        }
    }
}
