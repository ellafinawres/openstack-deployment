pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        SSH_KEY = '/var/jenkins_home/.ssh/id_rsa'   // clé copiée dans Jenkins
        SSH_USER = 'nawresellafi'                  // ton utilisateur hôte
        SSH_HOST = '172.17.0.1'                     // IP de la machine hôte vue depuis le container
    }

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ellafinawres/openstack-deployment.git'
            }
        }

        stage('Test Ansible connectivity') {
            steps {
                dir('openstack-deployment') {
                    sh """
                    ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} \\
                    'ansible -i inventory.yml all -m ping -e ansible_ssh_timeout=30'
                    """
                }
            }
        }

        stage('Deploy Keystone') {
            steps {
                dir('openstack-deployment') {
                    sh """
                    ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} \\
                    'ansible-playbook -i inventory.yml site.yml'
                    """
                }
            }
        }

        stage('Verify Keystone') {
            steps {
                dir('openstack-deployment') {
                    echo "=== Vérification Keystone ==="
                    sh """
                    ssh -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} 'openstack project list'
                    ssh -i ${SSH_KEY} ${SSH_USER}@${SSH_HOST} 'openstack user list'
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Déploiement OpenStack terminé et Keystone vérifié"
        }
        failure {
            echo "❌ Échec du déploiement ou de la vérification"
        }
    }
}
